{
  "name": "dailytaks-api",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "watch:dev": "nodemon index.js",
    "dev": "yarn run watch:dev",
    "test": "jest --forceExit",
    "test:coverage": "jest --collect-coverage",
    "lint": "node ./node_modules/eslint/bin/eslint . --ignore-path .gitignore",
    "eslint:github-action": "node ./node_modules/eslint/bin/eslint . --ignore-path .gitignore --max-warnings 0",
    "prepare": "husky install"
  },
  "lint-staged": {
    "**/*.{js, ts}": [
      "yarn run lint"
    ]
  },
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ]
  },
  "keywords": [
    "API",
    "Backend"
  ],
  "author": "Charles Elloit",
  "license": "MIT",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "helmet": "^4.6.0",
    "joi": "^17.4.0",
    "mongoose": "^5.12.14",
    "sanitize-html": "^2.4.0"
  },
  "devDependencies": {
    "eslint": "^7.29.0",
    "husky": "^6.0.0",
    "jest": "^27.0.4",
    "lint-staged": "^11.0.0",
    "nodemon": "^2.0.7",
    "supertest": "^6.1.3",
    "eslint-plugin-import": "^2.22.1",
    "eslint-config-airbnb-base": "^14.2.1"
  }
}
